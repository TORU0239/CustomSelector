<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context=".ui.MainActivity">
	<sg.toru.customselector.view.CustomSelector
		android:id="@+id/custom_selector_first"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		app:headerText="What is your mode of transport?"
		app:requiredRowCount="2"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintStart_toStartOf="parent"/>

	<sg.toru.customselector.view.CustomSelector
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		app:requiredRowCount="1"
		app:headerText="Where are you staying?"
		app:layout_constraintTop_toBottomOf="@id/custom_selector_first"
		app:layout_constraintStart_toStartOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>