<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/txt_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:fontFamily="@font/metropolis_regular"
        android:text="What dates will you be in Singapore?"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container_arrival"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/rect_half_corner_bg"
        app:layout_constraintTop_toBottomOf="@id/txt_header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_percent="0.438"
        app:layout_constraintDimensionRatio="1:0.316">

        <ImageView
            android:id="@+id/btn_open_calendar_arrival"
            android:layout_width="18dp"
            android:layout_height="20dp"
            android:layout_marginEnd="13dp"
            android:src="@drawable/ic_icon_action_calendar_border_24_px"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/txt_arrival"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="13dp"
            android:fontFamily="@font/roboto_regular"
            android:textColor="#61000000"
            android:textSize="16sp"
            android:text="Arrival"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container_arrival_filled"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="16dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/txt_header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_percent="0.438"
        app:layout_constraintDimensionRatio="1:0.316">

        <ImageView
            android:id="@+id/btn_open_calendar_arrival_filled"
            android:layout_width="18dp"
            android:layout_height="20dp"
            android:layout_marginEnd="13dp"
            android:src="@drawable/ic_icon_action_calendar_border_24_px_filled"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/txt_arrival_filled"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="13dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/roboto_regular"
            android:textColor="#61000000"
            android:textSize="12sp"
            android:text="Arrival"
            android:includeFontPadding="false"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/txt_arrival_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="13dp"
            android:fontFamily="@font/roboto_regular"
            android:textColor="#0091ff"
            android:textSize="16sp"
            android:text="Nov 17, 2019"
            android:includeFontPadding="false"
            app:layout_constraintTop_toBottomOf="@id/txt_arrival_filled"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btn_open_calendar_arrival_filled"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container_departure"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/rect_half_corner_bg"
        app:layout_constraintTop_toBottomOf="@id/txt_header"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.438"
        app:layout_constraintDimensionRatio="1:0.316">

        <ImageView
            android:id="@+id/btn_open_calendar_departure"
            android:layout_width="18dp"
            android:layout_height="20dp"
            android:layout_marginEnd="13dp"
            android:src="@drawable/ic_icon_action_calendar_border_24_px"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/txt_departure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="13dp"
            android:fontFamily="@font/roboto_regular"
            android:textSize="16sp"
            android:text="Departure"
            android:textColor="#61000000"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container_departure_filled"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="16dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/txt_header"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.438"
        app:layout_constraintDimensionRatio="1:0.316">

        <ImageView
            android:id="@+id/btn_open_calendar_departure_filled"
            android:layout_width="18dp"
            android:layout_height="20dp"
            android:layout_marginEnd="13dp"
            android:src="@drawable/ic_icon_action_calendar_border_24_px_filled"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/txt_departure_filled"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="13dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/roboto_regular"
            android:textColor="#61000000"
            android:textSize="12sp"
            android:text="Departure"
            android:includeFontPadding="false"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/txt_deoarture_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="13dp"
            android:fontFamily="@font/roboto_regular"
            android:textColor="#0091ff"
            android:textSize="16sp"
            android:text="Nov 17, 2019"
            android:includeFontPadding="false"
            app:layout_constraintTop_toBottomOf="@id/txt_departure_filled"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btn_open_calendar_departure_filled"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>