<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/txt_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/metropolis_regular"
        android:text="What dates will you be in Singapore?"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container_arrival"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="16dp"
        android:background="#a1dddddd"
        app:layout_constraintTop_toBottomOf="@id/txt_header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_percent="0.438"
        app:layout_constraintDimensionRatio="1:0.316">

        <ImageView
            android:id="@+id/btn_open_calendar_arrival"
            android:layout_width="18dp"
            android:layout_height="20dp"
            android:layout_marginEnd="13dp"
            android:src="@drawable/ic_icon_action_calendar_border_24_px"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/txt_arrival"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="13dp"
            android:fontFamily="@font/roboto_regular"
            android:textColor="#61000000"
            android:textSize="16sp"
            android:text="Arrival"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container_departure"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="16dp"
        android:background="#a1dddddd"
        app:layout_constraintTop_toBottomOf="@id/txt_header"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.438"
        app:layout_constraintDimensionRatio="1:0.316">

        <ImageView
            android:id="@+id/btn_open_calendar_departure"
            android:layout_width="18dp"
            android:layout_height="20dp"
            android:layout_marginEnd="13dp"
            android:src="@drawable/ic_icon_action_calendar_border_24_px"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/txt_departure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="13dp"
            android:fontFamily="@font/roboto_regular"
            android:textSize="16sp"
            android:text="Departure"
            android:textColor="#61000000"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>